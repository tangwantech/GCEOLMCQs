<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"/>

    <LinearLayout
        android:id="@+id/layoutOption1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_minimum_height"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16">

        <TextView
            android:id="@+id/tvSelectableOption1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Replace this text with non selectable option"
            android:textSize="@dimen/text_size_14"
            android:minHeight="@dimen/button_minimum_height"
            android:paddingTop="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_16"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"/>

    <LinearLayout
        android:id="@+id/layoutOption2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16">
        <TextView
            android:id="@+id/tvSelectableOption2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Replace this text with non selectable option"
            android:textSize="@dimen/text_size_14"
            android:minHeight="@dimen/button_minimum_height"
            android:paddingTop="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_16"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"/>

    <LinearLayout
        android:id="@+id/layoutOption3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16">

        <TextView
            android:id="@+id/tvSelectableOption3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Replace this text with non selectable option"
            android:textSize="@dimen/text_size_14"
            android:paddingTop="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_16"
            android:minHeight="@dimen/button_minimum_height"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"/>

    <LinearLayout
        android:id="@+id/layoutOption4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16">

        <TextView
            android:id="@+id/tvSelectableOption4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Replace this text with non selectable option"
            android:textSize="@dimen/text_size_14"
            android:paddingTop="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_16"
            android:minHeight="@dimen/button_minimum_height"
            android:gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>