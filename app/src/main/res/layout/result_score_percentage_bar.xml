    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/card_background_drawable"
        android:layout_margin="@dimen/margin_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/score"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:paddingStart="@dimen/margin_14"
            android:paddingEnd="@dimen/margin_8"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_4"
            android:background="@color/color_on_primary"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvSectionScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="6/6"
            android:textColor="@color/color_on_primary"
            android:textSize="24dp"
            android:textStyle="bold"
            android:paddingEnd="@dimen/margin_14"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        app:cardBackgroundColor="@color/color_primary"
        android:layout_margin="@dimen/margin_4"
        app:cardCornerRadius="@dimen/margin_8"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/percentage"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="@dimen/divided_width_2"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:background="@color/color_on_primary"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvSectionPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

