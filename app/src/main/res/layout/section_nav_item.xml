<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sectionNavItemLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_item_view_min_height"
    android:minHeight="@dimen/button_minimum_height"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvSectionNavItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:text="@string/recycler_item_text"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/imgSectionAnsweredCheck"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_14"
            android:src="@drawable/ic_baseline_check_25"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvSectionNumberOfQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of questions: 10"
            android:textSize="@dimen/text_size_10"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:layout_weight="0.9"/>
        <TextView
            android:id="@+id/tvSectionScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/10"
            android:textSize="@dimen/text_size_10"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"/>
    </LinearLayout>



</LinearLayout>