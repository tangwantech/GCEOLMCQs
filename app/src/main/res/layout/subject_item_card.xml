<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSubjectNavItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_14"
    android:layout_marginEnd="@dimen/margin_14"
    android:layout_marginTop="@dimen/margin_12"
    android:layout_marginBottom="@dimen/margin_8"
    app:cardCornerRadius="@dimen/margin_8"
    android:elevation="@dimen/margin_8">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_8"
        android:paddingEnd="@dimen/margin_8"
        android:background="?android:selectableItemBackground">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingStart="@dimen/margin_4"
            android:paddingEnd="@dimen/margin_4">
            <TextView
                android:id="@+id/subjectTitleTv"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Biology"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16"
                android:gravity="center_vertical"
                android:textAllCaps="true"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/package_type"
                    android:textSize="@dimen/text_size_10"
                    android:padding="@dimen/margin_4"/>
                <TextView
                    android:id="@+id/tvPackageType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MCQ 1H"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/activate_on"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/text_size_10"/>
                <TextView
                    android:id="@+id/activatedOnTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/activated_on_value"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/expires_on"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/text_size_10"/>
                <TextView
                    android:id="@+id/expiresOnTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/activated_on_value"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/status"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/text_size_10"/>
                <TextView
                    android:id="@+id/tvSubjectStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Active"
                    android:padding="@dimen/margin_4"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">
            <Button
                android:id="@+id/btnSubscribe"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/subscribe"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>